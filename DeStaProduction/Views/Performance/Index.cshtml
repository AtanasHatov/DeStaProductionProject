@using DeStaProduction.ViewModels
@model IEnumerable<PerformanceViewModel>

<h2>Performances</h2>

<a asp-action="Create" class="btn btn-primary mb-2">Add Performance</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Event</th>
            <th>Location</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Title</td>
                <td>@p.Event?.Title</td>
                <td>@p.Location.Name</td>
                <td>@p.Date.ToString("dd.MM.yyyy HH:mm")</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@p.Id" method="post" style="display:inline">
                        <button class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
